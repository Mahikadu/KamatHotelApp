<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/upAdapter1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:elevation="4dp"
        android:background="@color/white"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="5dp"
        card_view:cardCornerRadius="4dp">

        <LinearLayout
            android:orientation="horizontal"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtSrNo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_weight="4"
                android:maxLines="2"
                android:layout_marginLeft="3sp"
                android:layout_marginRight="3sp"
                android:text="SrNo"/>

            <TextView
                android:id="@+id/txtLevel2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_weight="9"
                android:maxLines="2"
                android:layout_marginLeft="3sp"
                android:layout_marginRight="3sp"
                android:text="Type (Level 2)"/>

            <TextView
                android:id="@+id/txtLevel3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_weight="9"
                android:maxLines="2"
                android:layout_marginLeft="3sp"
                android:layout_marginRight="3sp"
                android:text="TypeDesc (Level 3)"/>

            <TextView
                android:id="@+id/txtLevel4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Level 4"
                android:layout_weight="9"
                android:maxLines="2"
                android:layout_marginLeft="3sp"
                android:layout_marginRight="3sp"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txtLevel5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3sp"
                android:layout_marginRight="3sp"
                android:layout_weight="9"
                android:maxLines="2"
                android:textSize="15sp"
                android:text="Level 5"/>

            <TextView
                android:id="@+id/txtLevel6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3sp"
                android:layout_marginRight="3sp"
                android:layout_weight="9"
                android:maxLines="2"
                android:textSize="15sp"
                android:text="Level 6"/>

            <TextView
                android:id="@+id/txtLevel7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3sp"
                android:layout_marginRight="3sp"
                android:layout_weight="9"
                android:maxLines="2"
                android:textSize="15sp"
                android:text="Level 7"/>

            <TextView
                android:id="@+id/txtFilenName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3sp"
                android:layout_marginRight="3sp"
                android:layout_weight="9"
                android:maxLines="2"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3sp"
                    android:layout_marginRight="3sp"
                    android:textSize="15sp"
                    android:text="Edit"/>

                <TextView
                    android:id="@+id/txtDelete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3sp"
                    android:layout_marginRight="3sp"
                    android:text="Delete"/>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>